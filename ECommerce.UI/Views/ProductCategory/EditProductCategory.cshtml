@model EntityLayer.Concrete.ProductCategory

@{
    ViewData["Title"] = "EditProductCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h4>Ürün Kategorisi Güncelleme</h4>
<hr />
<div class="row">
    <div class="col-11 container-fluid">
        <form asp-action="EditProductCategory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductCatID" />
            <div class="form-group">
                <label asp-for="ProductCatName" class="control-label"> Kategori Adı</label>
                <input asp-for="ProductCatName" class="form-control text-white" />
                <span asp-validation-for="ProductCatName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductCatDescription" class="control-label">Kategori Açıklama</label>
                <textarea rows="10" asp-for="ProductCatDescription" class="form-control text-white" ></textarea>
                <span asp-validation-for="ProductCatDescription" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label text-white">
                    Kategori Görünürlük
                    <input class="form-check-input" asp-for="ProductCatStatus" />
                </label>
            </div>
            <div class="form-group">
                <div class="float-left">
                    <a class="btn btn-primary" asp-action="Index"><i class="mdi mdi-arrow-left"></i> Listeye Geri Dön</a>
                </div>
                <div class="float-right">
                    <button type="submit" class="btn btn-primary"><i class="mdi mdi-content-save"></i> Kaydet</button>
                </div>
            </div>
        </form>
    </div>
</div>

