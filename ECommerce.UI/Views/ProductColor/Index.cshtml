@model IEnumerable<EntityLayer.Concrete.ProductColor>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductColorTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductColorCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductColorStock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductColorTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductColorCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductColorStock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.ProductID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProductColorID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProductColorID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProductColorID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
