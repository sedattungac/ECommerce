@using EntityLayer.Concrete
@model List<Role>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script src="~/lib/js/jquery/jquery.min.js"></script>
<script src="~/lib/js/jquery/jquery.js"></script>
<script src="~/lib/js/jquery/3.6.0/jquery/jquery.min.js"></script>
<script src="~/lib/js/jquery/3.6.0/jquery/jquery.js"></script>
<div class="col-lg-12 stretch-card">
    <div class="card">

        <div class="card-body">
            <div>
                <h4 class="card-title float-left">Rol Listesi</h4>
                <button class="btn btn-info float-right" data-toggle="modal" data-target="#myModal">+ Rol Ekle</button>

            </div>

            <div class="table-responsive mt-2">
                <table class="table table-bordered table-contextual">
                    <thead>
                        <tr>
                            <th>Rol</th>
                            <th>Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var role in Model)
                        {
                            <tr>
                                <td>@role.RoleName</td>
                                <td><a href="/Role/EditRole/@role.RoleID" class="btn btn-warning btn-sm"><i class="fas fa-cog"></i> Düzenle</a></td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
            <!-- /.card-body -->
        </div>
    </div>
</div>
@using (Html.BeginForm("AddRole", "Role", FormMethod.Post))
{
    <div class="modal" id="myModal" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4>Rol Ekle</h4>
                    <button style="color:white;" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <div class="form-group">
                            <label>Rol Adı</label>
                            <input class="form-control text-white" type="text" name="RoleName" required />
                        </div>


                    </div>
                </div>
                <div class="modal-footer">
                    <div class="form-group">
                        <div class="float-right">
                            <input type="submit" name="Ekle" value="Ekle" class="btn btn-info" />
                        </div>&nbsp;
                        <div class="float-left">
                            <button data-dismiss="modal" class="btn btn-danger"> Kapat</button>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
}


