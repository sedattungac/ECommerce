@using EntityLayer.Concrete
@model List<User>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 stretch-card">
    <div class="card">

        <div class="card-body">
            <div>
                <h4 class="card-title float-left">Kullanıcı Listesi</h4>
                <a href="/User/AddUser/" class="btn btn-info float-right">+ Kullanıcı Ekle</a>

            </div>

            @*<p class="card-description">
                    Add class <code>.table-{color}</code>
                </p>*@
            <div class="table-responsive mt-2">
                <table class="table table-bordered table-contextual">
                    <thead>
                        <tr>
                            <th>Ünvan </th>
                            <th>Ad Soyad </th>
                            <th> Kullanıcı Adı </th>
                            <th> Mail </th>
                            <th> Şifre </th>
                            <th> Düzenle </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var title in Model)
                        {
                            <tr class="table-dark">
                                <td>@title.Title.TitleName</td>
                                <td>@title.UserFullName</td>
                                <td>@title.UserName</td>
                                <td>@title.Email</td>
                                <td>@title.Password</td>
                                <td><a href="/User/EditUser/@title.TitleID" class="btn btn-warning"><i class="mdi mdi-update"></i>Düzenle</a></td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

